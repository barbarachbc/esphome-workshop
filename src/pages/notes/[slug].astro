---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import IssueReportButton from '../../components/IssueReportButton.astro';
import LastModified from '../../components/LastModified.astro';

export async function getStaticPaths() {
  const notes = await getCollection('notes');
  return notes.map(note => ({
    params: { slug: note.slug },
    props: { note },
  }));
}

const { note } = Astro.props;
const { Content } = await note.render();
---

<Layout title={`${note.data.title} - Notes`}>
  <article>
    <div class="header">
      <h1>{note.data.title}</h1>
      <div class="meta">
        <span class="badge category">{note.data.category}</span>
        {note.data.difficulty && (
          <span class={`badge difficulty ${note.data.difficulty}`}>
            {note.data.difficulty}
          </span>
        )}
        {note.data.lastUpdated && (
          <span class="last-updated">Updated: {note.data.lastUpdated}</span>
        )}
      </div>
    </div>

    <div class="description">
      <p><strong>{note.data.description}</strong></p>
    </div>

    <LastModified 
      date={note.data.lastModified}
      verified={note.data.lastVerified}
      showAge={true}
    />

    {note.data.tags && note.data.tags.length > 0 && (
      <div class="section">
        <div class="tags">
          {note.data.tags.map(tag => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      </div>
    )}

    <div class="content">
      <Content />
    </div>

    <a href="/notes" class="back-link">‚Üê Back to all notes</a>

    <IssueReportButton 
      pageType="note"
      pageTitle={note.data.title}
      pageSlug={note.slug}
    />
  </article>

  <style>
    article {
      max-width: 800px;
    }

    .header {
      margin-bottom: 2rem;
    }

    .header h1 {
      margin-bottom: 1rem;
    }

    .meta {
      display: flex;
      align-items: center;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .badge {
      display: inline-block;
      padding: 0.5rem 1rem;
      border-radius: 1rem;
      font-size: 0.875rem;
      font-weight: 600;
    }

    .badge.category {
      background: #8b5cf6;
      color: white;
    }

    .badge.difficulty {
      color: white;
    }

    .badge.difficulty.beginner {
      background: #10b981;
    }

    .badge.difficulty.intermediate {
      background: #f59e0b;
    }

    .badge.difficulty.advanced {
      background: #ef4444;
    }

    .last-updated {
      color: var(--gray);
      font-size: 0.875rem;
    }

    .description {
      background: var(--light-gray);
      padding: 1.5rem;
      border-radius: 0.5rem;
      margin-bottom: 2rem;
    }

    .description p {
      margin: 0;
      font-size: 1.125rem;
    }

    .section {
      margin: 2rem 0;
    }

    .tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .tag {
      display: inline-block;
      background: var(--light-gray);
      padding: 0.5rem 1rem;
      border-radius: 0.25rem;
      font-size: 0.875rem;
      color: var(--text);
      font-weight: 500;
    }

    .content {
      margin: 2rem 0;
    }

    .back-link {
      display: inline-block;
      margin-top: 2rem;
      color: var(--accent);
      text-decoration: none;
      font-weight: 500;
    }

    .back-link:hover {
      text-decoration: underline;
    }
  </style>
</Layout>
