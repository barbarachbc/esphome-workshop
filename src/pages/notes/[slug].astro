---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import IssueReportButton from '../../components/IssueReportButton.astro';
import LastModified from '../../components/LastModified.astro';
import TableOfContents from '../../components/TableOfContents.astro';

export async function getStaticPaths() {
  const notes = await getCollection('notes');
  return notes.map(note => ({
    params: { slug: note.slug },
    props: { note },
  }));
}

const { note } = Astro.props;
const { Content, headings } = await note.render();
---

<Layout title={`${note.data.title} - Notes`}>
  <div class="grid grid-cols-1 lg:grid-cols-[1fr_300px] gap-8 max-w-7xl mx-auto px-4"
       data-pagefind-body
       data-pagefind-filter="Type:Note"
       data-pagefind-filter={`Category:${note.data.category}`}
       data-pagefind-filter={note.data.difficulty ? `Difficulty:${note.data.difficulty}` : undefined}>
    {headings.length >= 3 && (
      <div class="lg:hidden mb-8">
        <TableOfContents headings={headings} minDepth={1} />
      </div>
    )}
    
    <article class="min-w-0">
      <div class="mb-8">
        <h1 data-pagefind-meta="title" class="text-4xl font-semibold mb-4">{note.data.title}</h1>
        <div class="flex items-center gap-4 flex-wrap">
          <span class="inline-block bg-purple-600 text-white px-4 py-2 rounded-full text-sm font-semibold">{note.data.category}</span>
          {note.data.difficulty && (
            <span class={`inline-block text-white px-4 py-2 rounded-full text-sm font-semibold ${
              note.data.difficulty === 'beginner' ? 'bg-emerald-500' :
              note.data.difficulty === 'intermediate' ? 'bg-amber-500' :
              'bg-red-500'
            }`}>
              {note.data.difficulty}
            </span>
          )}
        </div>
      </div>

      <div class="bg-gray-100 p-6 rounded-lg mb-8">
        <p class="m-0 text-lg"><strong>{note.data.description}</strong></p>
      </div>

      <LastModified 
        date={note.data.lastUpdated}
        verified={note.data.lastVerified}
        showAge={true}
      />

      {note.data.tags && note.data.tags.length > 0 && (
        <div class="my-8">
          <div class="flex flex-wrap gap-2">
            {note.data.tags.map(tag => (
              <span class="inline-block bg-gray-100 text-gray-800 px-4 py-2 rounded text-sm font-medium">{tag}</span>
            ))}
          </div>
        </div>
      )}

      <div class="my-8 prose max-w-none">
        <Content />
      </div>

      <a href="/notes" class="inline-block mt-8 text-blue-600 no-underline font-medium hover:underline">‚Üê Back to all notes</a>

      <IssueReportButton 
        pageType="note"
        pageTitle={note.data.title}
        pageSlug={note.slug}
      />
    </article>

    {headings.length >= 3 && (
      <aside class="hidden lg:block">
        <div class="sticky top-8 max-h-[calc(100vh-4rem)] overflow-y-auto">
          <TableOfContents headings={headings} minDepth={1} />
        </div>
      </aside>
    )}
  </div>
</Layout>
