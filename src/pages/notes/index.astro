---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import NoteCard from '../../components/NoteCard.astro';

const notes = await getCollection('notes');
const categories = [...new Set(notes.map(n => n.data.category))];
---

<Layout title="Notes - My ESPHome Workshop">
  <h1>Notes & Guides</h1>
  <p class="subtitle">Setup guides, networking tricks, and lessons learned along the way</p>

  <div class="filters">
    <label>
      Filter by category:
      <select id="categoryFilter">
        <option value="">All Categories</option>
        {categories.map(cat => (
          <option value={cat}>{cat}</option>
        ))}
      </select>
    </label>
  </div>

  <div class="notes-grid" id="notesGrid">
    {notes.map(note => (
      <div data-category={note.data.category}>
        <NoteCard note={note} />
      </div>
    ))}
  </div>

  {notes.length === 0 && (
    <p class="empty-state">No notes yet. Start documenting your journey!</p>
  )}

  <style>
    .subtitle {
      color: var(--gray);
      font-size: 1.125rem;
      margin-bottom: 2rem;
    }

    .filters {
      margin-bottom: 2rem;
      padding: 1rem;
      background: var(--light-gray);
      border-radius: 0.5rem;
    }

    .filters select {
      padding: 0.5rem;
      border: 1px solid var(--border);
      border-radius: 0.25rem;
      font-size: 1rem;
    }

    .notes-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 1.5rem;
    }

    .empty-state {
      text-align: center;
      color: var(--gray);
      padding: 3rem;
      font-size: 1.125rem;
    }
  </style>

  <script>
    const filter = document.getElementById('categoryFilter') as HTMLSelectElement;
    const grid = document.getElementById('notesGrid');
    
    filter?.addEventListener('change', () => {
      const value = filter.value;
      const cards = grid?.querySelectorAll('[data-category]');
      
      cards?.forEach(card => {
        const category = card.getAttribute('data-category');
        if (!value || category === value) {
          (card as HTMLElement).style.display = 'block';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    });
  </script>
</Layout>
