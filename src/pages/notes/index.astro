---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import NoteCard from '../../components/NoteCard.astro';

const notes = await getCollection('notes');
const categories = [...new Set(notes.map(n => n.data.category))];
---

<Layout title="Notes - My ESPHome Workshop">
  <h1 class="text-4xl font-semibold mt-0 mb-6">Notes & Guides</h1>
  <p class="text-gray-500 text-lg mb-8">Setup guides, networking tricks, and lessons learned along the way</p>

  <div class="mb-8 p-4 bg-gray-100 rounded-lg">
    <label class="flex items-center gap-2">
      <span class="font-medium">Filter by category:</span>
      <select id="categoryFilter" class="px-3 py-2 border border-gray-200 rounded text-base">
        <option value="">All Categories</option>
        {categories.map(cat => (
          <option value={cat}>{cat}</option>
        ))}
      </select>
    </label>
  </div>

  <div class="grid grid-cols-[repeat(auto-fill,minmax(300px,1fr))] gap-6" id="notesGrid">
    {notes.map(note => (
      <div data-category={note.data.category}>
        <NoteCard note={note} />
      </div>
    ))}
  </div>

  {notes.length === 0 && (
    <p class="text-center text-gray-500 p-12 text-lg">No notes yet. Start documenting your journey!</p>
  )}

  <script>
    const filter = document.getElementById('categoryFilter') as HTMLSelectElement;
    const grid = document.getElementById('notesGrid');
    
    filter?.addEventListener('change', () => {
      const value = filter.value;
      const cards = grid?.querySelectorAll('[data-category]');
      
      cards?.forEach(card => {
        const category = card.getAttribute('data-category');
        if (!value || category === value) {
          (card as HTMLElement).style.display = 'block';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    });
  </script>
</Layout>
