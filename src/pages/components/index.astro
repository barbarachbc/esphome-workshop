---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import ComponentCard from '../../components/ComponentCard.astro';

const components = await getCollection('components');
const categories = [...new Set(components.map(c => c.data.category))];
---

<Layout title="Components">
  <h1 class="text-4xl font-semibold mt-0 mb-6" style="color: var(--text-heading);">Components</h1>
  <p class="text-lg mb-8" style="color: var(--text-secondary);">ESPHome software components and platforms</p>

  <div class="mb-8 p-4 rounded-lg" style="background: var(--bg-secondary);">
    <label class="flex items-center gap-2">
      <span class="font-medium" style="color: var(--text-primary);">Filter by category:</span>
      <select id="categoryFilter" class="px-3 py-2 rounded text-base" style="background: var(--bg-card); color: var(--text-primary); border: 1px solid var(--border-card);">
        <option value="">All Categories</option>
        {categories.map(cat => (
          <option value={cat}>{cat}</option>
        ))}
      </select>
    </label>
  </div>

  <div class="grid grid-cols-[repeat(auto-fill,minmax(300px,1fr))] gap-6" id="componentGrid">
    {components.map(component => (
      <div data-category={component.data.category}>
        <ComponentCard component={component} />
      </div>
    ))}
  </div>

  <script>
    const filter = document.getElementById('categoryFilter') as HTMLSelectElement;
    const grid = document.getElementById('componentGrid');
    
    filter?.addEventListener('change', () => {
      const value = filter.value;
      const cards = grid?.querySelectorAll('[data-category]');
      
      cards?.forEach(card => {
        const category = card.getAttribute('data-category');
        if (!value || category === value) {
          (card as HTMLElement).style.display = 'block';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    });
  </script>
</Layout>
