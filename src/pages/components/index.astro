---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import ComponentCard from '../../components/ComponentCard.astro';

const components = await getCollection('components');
const categories = [...new Set(components.map(c => c.data.category))];
---

<Layout title="Components">
  <h1>Components</h1>
  <p class="subtitle">ESPHome software components and platforms</p>

  <div class="filters">
    <label>
      Filter by category:
      <select id="categoryFilter">
        <option value="">All Categories</option>
        {categories.map(cat => (
          <option value={cat}>{cat}</option>
        ))}
      </select>
    </label>
  </div>

  <div class="component-grid" id="componentGrid">
    {components.map(component => (
      <div data-category={component.data.category}>
        <ComponentCard component={component} />
      </div>
    ))}
  </div>

  <style>
    .subtitle {
      color: var(--gray);
      font-size: 1.125rem;
      margin-bottom: 2rem;
    }

    .filters {
      margin-bottom: 2rem;
      padding: 1rem;
      background: var(--light-gray);
      border-radius: 0.5rem;
    }

    .filters select {
      padding: 0.5rem;
      border: 1px solid var(--border);
      border-radius: 0.25rem;
      font-size: 1rem;
    }

    .component-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 1.5rem;
    }

    /* Card styles moved to ComponentCard.astro component */
  </style>

  <script>
    const filter = document.getElementById('categoryFilter') as HTMLSelectElement;
    const grid = document.getElementById('componentGrid');
    
    filter?.addEventListener('change', () => {
      const value = filter.value;
      const cards = grid?.querySelectorAll('[data-category]');
      
      cards?.forEach(card => {
        const category = card.getAttribute('data-category');
        if (!value || category === value) {
          (card as HTMLElement).style.display = 'block';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    });
  </script>
</Layout>
