---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const components = await getCollection('components');
  return components.map(component => ({
    params: { slug: component.slug },
    props: { component },
  }));
}

const { component } = Astro.props;
const { Content } = await component.render();

// Get related devices if specified
let relatedDevices = [];
if (component.data.relatedDevices && component.data.relatedDevices.length > 0) {
  const allDevices = await getCollection('devices');
  relatedDevices = allDevices.filter(d => 
    component.data.relatedDevices?.includes(d.slug)
  );
}
---

<Layout title={`${component.data.title} - Components`}>
  <article>
    <div class="header">
      <h1>{component.data.title}</h1>
      <div class="meta">
        <span class="badge">{component.data.category}</span>
        <code class="component-name">{component.data.esphomeComponent}</code>
        {component.data.requiresHardware && (
          <span class="hardware-badge">Requires Hardware</span>
        )}
      </div>
    </div>

    <div class="description">
      <p><strong>{component.data.description}</strong></p>
    </div>

    {component.data.documentation && (
      <div class="section">
        <a href={component.data.documentation} target="_blank" rel="noopener noreferrer" class="doc-link">
          üìö Official ESPHome Documentation ‚Üí
        </a>
      </div>
    )}

    <div class="content">
      <Content />
    </div>

    {relatedDevices.length > 0 && (
      <div class="section">
        <h2>Related Devices</h2>
        <div class="related-grid">
          {relatedDevices.map(device => (
            <a href={`/devices/${device.slug}`} class="related-card">
              <h4>{device.data.title}</h4>
              <p>{device.data.description}</p>
            </a>
          ))}
        </div>
      </div>
    )}

    <a href="/components" class="back-link">‚Üê Back to all components</a>
  </article>

  <style>
    article {
      max-width: 800px;
    }

    .header {
      margin-bottom: 2rem;
    }

    .header h1 {
      margin-bottom: 1rem;
    }

    .meta {
      display: flex;
      align-items: center;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .badge {
      display: inline-block;
      background: var(--accent);
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 1rem;
      font-size: 0.875rem;
      font-weight: 600;
    }

    .component-name {
      background: var(--light-gray);
      padding: 0.5rem 1rem;
      border-radius: 0.25rem;
      font-size: 0.875rem;
      color: #c7254e;
    }

    .hardware-badge {
      background: #f59e0b;
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 1rem;
      font-size: 0.75rem;
      font-weight: 600;
    }

    .description {
      background: var(--light-gray);
      padding: 1.5rem;
      border-radius: 0.5rem;
      margin-bottom: 2rem;
    }

    .description p {
      margin: 0;
      font-size: 1.125rem;
    }

    .section {
      margin: 2rem 0;
    }

    .doc-link {
      display: inline-block;
      background: var(--accent);
      color: white;
      padding: 0.75rem 1.5rem;
      border-radius: 0.5rem;
      text-decoration: none;
      font-weight: 500;
      transition: background 0.2s;
    }

    .doc-link:hover {
      background: var(--accent-dark);
    }

    .content {
      margin: 2rem 0;
    }

    .related-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1rem;
    }

    .related-card {
      background: white;
      border: 1px solid var(--border);
      border-radius: 0.5rem;
      padding: 1rem;
      text-decoration: none;
      color: var(--text);
      transition: all 0.2s;
    }

    .related-card:hover {
      border-color: var(--accent);
      transform: translateY(-2px);
    }

    .related-card h4 {
      margin: 0 0 0.5rem 0;
      color: var(--accent);
      font-size: 1rem;
    }

    .related-card p {
      margin: 0;
      color: var(--gray);
      font-size: 0.875rem;
    }

    .back-link {
      display: inline-block;
      margin-top: 2rem;
      color: var(--accent);
      text-decoration: none;
      font-weight: 500;
    }

    .back-link:hover {
      text-decoration: underline;
    }
  </style>
</Layout>
