---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import IssueReportButton from '../../components/IssueReportButton.astro';
import LastModified from '../../components/LastModified.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();

// Get related devices and components
const allDevices = await getCollection('devices');
const allComponents = await getCollection('components');

const devices = allDevices.filter(d => project.data.devices.includes(d.slug));
const components = allComponents.filter(c => project.data.components.includes(c.slug));

const statusLabels = {
  idea: 'üí≠ Idea',
  'in-progress': 'üõ†Ô∏è In Progress',
  completed: '‚úÖ Completed',
  abandoned: '‚è∏Ô∏è Abandoned',
};
---

<Layout title={`${project.data.title} - Projects`}>
  <article>
    <div class="header">
      <h1>{project.data.title}</h1>
      <span class={`status-badge ${project.data.status}`}>
        {statusLabels[project.data.status]}
      </span>
    </div>

    <div class="meta">
      <span class="badge badge-{project.data.difficulty}">{project.data.difficulty}</span>
      {project.data.dateStarted && (
        <span class="date-info">Started: {project.data.dateStarted}</span>
      )}
      {project.data.dateCompleted && (
        <span class="date-info">Completed: {project.data.dateCompleted}</span>
      )}
    </div>

    <div class="description">
      <p><strong>{project.data.description}</strong></p>
    </div>

    <LastModified 
      date={project.data.lastModified}
      verified={project.data.lastVerified}
      showAge={true}
    />

    {project.data.motivation && (
      <div class="motivation-callout">
        <h3>üí° Why This Project?</h3>
        <p>{project.data.motivation}</p>
      </div>
    )}

    <div class="requirements">
      <div class="requirement-section">
        <h2>Required Devices</h2>
        <div class="card-grid">
          {devices.map(device => (
            <a href={`/devices/${device.slug}`} class="info-card">
              <h4>{device.data.title}</h4>
              <p>{device.data.description}</p>
              <span class="mini-badge">{device.data.category}</span>
            </a>
          ))}
        </div>
      </div>

      <div class="requirement-section">
        <h2>Required Components</h2>
        <div class="card-grid">
          {components.map(component => (
            <a href={`/components/${component.slug}`} class="info-card">
              <h4>{component.data.title}</h4>
              <code class="component-code">{component.data.esphomeComponent}</code>
              <p>{component.data.description}</p>
            </a>
          ))}
        </div>
      </div>
    </div>

    <div class="content">
      <Content />
    </div>

    <a href="/projects" class="back-link">‚Üê Back to all projects</a>

    <IssueReportButton 
      pageType="project"
      pageTitle={project.data.title}
      pageSlug={project.slug}
    />
  </article>

  <style>
    article {
      max-width: 900px;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1rem;
    }

    .header h1 {
      margin: 0;
    }

    .meta {
      display: flex;
      align-items: center;
      gap: 1rem;
      flex-wrap: wrap;
      margin-bottom: 2rem;
    }

    .badge {
      display: inline-block;
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 1rem;
      font-size: 0.875rem;
      font-weight: 600;
      text-transform: capitalize;
    }

    .badge-beginner {
      background: #10b981;
    }

    .badge-intermediate {
      background: #f59e0b;
    }

    .badge-advanced {
      background: #ef4444;
    }

    .date-info {
      color: var(--gray);
      font-size: 0.875rem;
    }

    .description {
      background: var(--light-gray);
      padding: 1.5rem;
      border-radius: 0.5rem;
      margin-bottom: 2rem;
    }

    .description p {
      margin: 0;
      font-size: 1.125rem;
    }

    .motivation-callout {
      background: linear-gradient(135deg, #dbeafe 0%, #f0f9ff 100%);
      border-left: 4px solid var(--accent);
      padding: 1.5rem;
      border-radius: 0.5rem;
      margin: 2rem 0;
    }

    .motivation-callout h3 {
      margin: 0 0 0.5rem 0;
      color: var(--accent-dark);
    }

    .motivation-callout p {
      margin: 0;
      color: var(--text);
    }

    .requirements {
      margin: 2rem 0;
    }

    .requirement-section {
      margin-bottom: 2rem;
    }

    .requirement-section h2 {
      margin-bottom: 1rem;
    }

    .card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1rem;
    }

    .info-card {
      background: white;
      border: 1px solid var(--border);
      border-radius: 0.5rem;
      padding: 1rem;
      text-decoration: none;
      color: var(--text);
      transition: all 0.2s;
      display: block;
    }

    .info-card:hover {
      border-color: var(--accent);
      transform: translateY(-2px);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .info-card h4 {
      margin: 0 0 0.5rem 0;
      color: var(--accent);
      font-size: 1rem;
    }

    .info-card p {
      margin: 0.5rem 0;
      color: var(--gray);
      font-size: 0.875rem;
    }

    .mini-badge {
      display: inline-block;
      background: var(--light-gray);
      padding: 0.25rem 0.5rem;
      border-radius: 0.25rem;
      font-size: 0.75rem;
      color: var(--text);
    }

    .component-code {
      display: block;
      background: var(--light-gray);
      padding: 0.25rem 0.5rem;
      border-radius: 0.25rem;
      font-size: 0.75rem;
      margin-bottom: 0.5rem;
      color: #c7254e;
    }

    .content {
      margin: 2rem 0;
    }

    .back-link {
      display: inline-block;
      margin-top: 2rem;
      color: var(--accent);
      text-decoration: none;
      font-weight: 500;
    }

    .back-link:hover {
      text-decoration: underline;
    }
  </style>
</Layout>
