---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import IssueReportButton from '../../components/IssueReportButton.astro';
import LastModified from '../../components/LastModified.astro';
import TableOfContents from '../../components/TableOfContents.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content, headings } = await project.render();

// Get related devices and components
const allDevices = await getCollection('devices');
const allComponents = await getCollection('components');

const devices = allDevices.filter(d => project.data.devices.includes(d.slug));
const components = allComponents.filter(c => project.data.components.includes(c.slug));

// Build complete ToC including conditional sections
const tocHeadings = [
  // Add "Page Info" link to top
  { depth: 2, slug: 'page-info', text: 'Page Info' },
];

// Add Required Devices and Required Components sections to ToC if they exist
if (devices.length > 0) {
  tocHeadings.push({ depth: 2, slug: 'required-devices', text: 'Required Devices' });
}
if (components.length > 0) {
  tocHeadings.push({ depth: 2, slug: 'required-components', text: 'Required Components' });
}

tocHeadings.push(
  // Add markdown headings (H2-H4 only)
  ...headings.filter(h => h.depth >= 2 && h.depth <= 4),
);

const statusLabels = {
  idea: 'üí≠ Idea',
  'in-progress': 'üõ†Ô∏è In Progress',
  completed: '‚úÖ Completed',
  abandoned: '‚è∏Ô∏è Abandoned',
};

const difficultyLabels = {
  beginner: 'üü¢ Beginner',
  intermediate: 'üü° Intermediate',
  advanced: 'üî¥ Advanced',
};
---

<Layout title={`${project.data.title} - Projects`}>
  <div class="grid grid-cols-1 lg:grid-cols-[1fr_300px] gap-8 max-w-7xl mx-auto">
    {tocHeadings.length >= 3 && (
      <div class="lg:hidden mb-8">
        <TableOfContents headings={tocHeadings} />
      </div>
    )}
    
    <article class="min-w-0">
      <div id="page-info" class="flex justify-between items-center mb-4">
        <h1 class="text-4xl font-semibold m-0">{project.data.title}</h1>
        <span class={`status-badge status-badge-${project.data.status}`}>
          {statusLabels[project.data.status]}
        </span>
      </div>

      <div class="flex items-center gap-4 flex-wrap mb-8">
        <span class={`inline-block text-white px-4 py-2 rounded-full text-sm font-semibold capitalize ${
          project.data.difficulty === 'beginner' ? 'bg-emerald-500' :
          project.data.difficulty === 'intermediate' ? 'bg-amber-500' :
          'bg-red-500'
        }`}>
          {difficultyLabels[project.data.difficulty]}
        </span>
        {project.data.dateStarted && (
          <span class="text-gray-500 text-sm">üìÖ Started: {project.data.dateStarted}</span>
        )}
        {project.data.dateCompleted && (
          <span class="text-gray-500 text-sm">‚úÖ Completed: {project.data.dateCompleted}</span>
        )}
        {project.data.tags && project.data.tags.length > 0 && (
          project.data.tags.map(tag => (
            <span class="inline-block bg-gray-100 text-gray-800 px-3 py-2 rounded-lg text-sm font-medium">{tag}</span>
          ))
        )}
      </div>

      <div class="bg-gray-100 p-6 rounded-lg mb-8">
        <p class="m-0 text-lg"><strong>{project.data.description}</strong></p>
      </div>

      <LastModified 
        date={project.data.lastModified}
        verified={project.data.lastVerified}
        showAge={true}
      />

      {project.data.motivation && (
        <div class="bg-linear-to-br from-blue-100 to-blue-50 border-l-4 border-blue-600 px-6 py-6 rounded-lg my-8">
          <h3 class="m-0 mb-2 text-blue-800">üí° Why This Project?</h3>
          <p class="m-0 text-gray-800">{project.data.motivation}</p>
        </div>
      )}

      <div class="my-8">
        <div id="required-devices" class="mb-8">
          <h2 class="text-2xl font-semibold mb-4">Required Devices</h2>
          <div class="grid grid-cols-[repeat(auto-fill,minmax(250px,1fr))] gap-4">
            {devices.map(device => (
              <a href={`/devices/${device.slug}`} class="block bg-white border border-gray-200 rounded-lg p-4 no-underline text-gray-800 transition-all duration-200 hover:border-blue-600 hover:-translate-y-0.5 hover:shadow-md">
                <h4 class="m-0 mb-2 text-blue-600 text-base">{device.data.title}</h4>
                <p class="my-2 text-gray-500 text-sm">{device.data.description}</p>
                <span class="inline-block bg-gray-100 text-gray-800 px-2 py-1 rounded text-xs">{device.data.category}</span>
              </a>
            ))}
          </div>
        </div>

        <div id="required-components" class="mb-8">
          <details class="group">
            <summary class="cursor-pointer list-none flex items-center gap-2 text-2xl font-semibold mb-4 hover:text-blue-600 transition-colors">
              <svg class="w-6 h-6 transition-transform group-open:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
              <span>Required Components ({components.length})</span>
            </summary>
            <div class="grid grid-cols-[repeat(auto-fill,minmax(250px,1fr))] gap-4 mt-4">
              {components.map(component => (
                <a href={`/components/${component.slug}`} aria-label={component.data.esphomeComponent} class="block bg-white border border-gray-200 rounded-lg p-4 no-underline text-gray-800 transition-all duration-200 hover:border-blue-600 hover:-translate-y-0.5 hover:shadow-md">
                  <h4 class="m-0 mb-2 text-blue-600 text-base">{component.data.title}</h4>
                  <code class="block bg-gray-100 px-2 py-1 rounded text-xs mb-2 text-pink-700">{component.data.esphomeComponent}</code>
                  <p class="m-0 text-gray-500 text-sm">{component.data.description}</p>
                </a>
              ))}
            </div>
          </details>
        </div>
      </div>

      <div class="my-8 prose max-w-none">
        <Content />
      </div>

      <a href="/projects" class="inline-block mt-8 text-blue-600 no-underline font-medium hover:underline">‚Üê Back to all projects</a>

      <IssueReportButton 
        pageType="project"
        pageTitle={project.data.title}
        pageSlug={project.slug}
      />
    </article>

    {tocHeadings.length >= 3 && (
      <aside class="hidden lg:block">
        <div class="sticky top-8 max-h-[calc(100vh-4rem)] overflow-y-auto">
          <TableOfContents headings={tocHeadings} />
        </div>
      </aside>
    )}
  </div>
</Layout>
