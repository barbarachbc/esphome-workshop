        <span class="px-2 py-1 rounded bg-amber-100 text-amber-800">ğŸ§ª {deviceStats.testing} testing</span>
        <span class="px-2 py-1 rounded bg-gray-100 text-gray-600">ğŸ“¦ {deviceStats.ready} ready</span>
        <span class="px-2 py-1 rounded bg-amber-100 text-amber-800">ğŸ”¦ {deviceStats.pending} pending</span>
        <span class="px-2 py-1 rounded bg-red-100 text-red-800">â• {deviceStats.unsupported} unsupported</span>
        {deviceStats.retired > 0 && (
          <span class="px-2 py-1 rounded bg-red-100 text-red-800">â¸ï¸ {deviceStats.retired} retired</span>
        )}
      </div>
    </a>

    <a href="/projects" class="block bg-white border border-gray-200 rounded-lg p-5 no-underline text-gray-800 transition-all duration-200 shadow-sm hover:-translate-y-0.5 hover:shadow-xl hover:border-blue-600">
      <div class="flex justify-between items-center mb-2">
        <h2 class="m-0 mb-2 text-xl text-blue-600">ğŸ’¡ Projects</h2>
        <div class="text-5xl font-bold text-blue-600">{projectStats.total}</div>
      </div>
      <p class="m-0 mb-4 text-gray-500 text-sm">Complete projects with wiring and configuration.</p>
      <div class="flex flex-col gap-2 text-sm">
        <span class="px-2 py-1 rounded bg-emerald-100 text-emerald-800">âœ… {projectStats.completed} completed</span>
        <span class="px-2 py-1 rounded bg-orange-200 text-orange-900">ğŸ› ï¸ {projectStats.inProgress} in progress</span>
        <span class="px-2 py-1 rounded bg-blue-100 text-blue-800">ğŸ’­ {projectStats.ideas} ideas</span>
        {projectStats.abandoned > 0 && (
          <span class="px-2 py-1 rounded bg-gray-100 text-gray-600">â¸ï¸ {projectStats.abandoned} abandoned</span>
        )}
      </div>
    </a>
  </div>

  {randomDevice && (
    <div class="mb-8 p-5 bg-gradient-to-br from-blue-100 to-blue-50 rounded-lg border-2 border-blue-600">
      <h2 class="m-0 mb-4 text-xl text-blue-900">ğŸ² Random Device to Try Next</h2>
      <div class="bg-white p-4 rounded-lg grid grid-cols-[auto_1fr] gap-6 items-center">
        <div>
          <h3 class="m-0 text-gray-800 text-lg whitespace-nowrap">{randomDevice.data.title}</h3>
        </div>
        <div class="flex flex-col gap-2">
          <p class="text-gray-500 m-0 text-sm">{randomDevice.data.description}</p>
          <div class="flex gap-2 flex-wrap">
            <span class="inline-block text-xs px-2 py-0.5 rounded bg-blue-100 text-blue-800">
              {randomDevice.data.category}
            </span>
            {randomDevice.data.connectionTypes.map(type => (
              <span class="inline-block text-xs px-2 py-0.5 rounded bg-gray-100 text-gray-700">{type}</span>
            ))}
          </div>
          <a href={`/devices/${randomDevice.slug}`} 
             class="inline-block w-fit px-4 py-2 bg-blue-600 text-white no-underline rounded-lg font-medium text-sm transition-all duration-200 hover:bg-blue-700 hover:-translate-y-0.5">
            Let's Use This! â†’
          </a>
