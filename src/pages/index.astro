      </div>
    </div>
  )}

  {recentChanges.length > 0 && (
    <div class="mb-8 p-5 bg-white rounded-lg border border-gray-200 shadow-sm">
      <h2 class="m-0 mb-4 text-xl text-gray-800">âœ¨ What's New</h2>
      <div class="flex flex-col gap-3">
