---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import ExampleCard from '../../components/ExampleCard.astro';

const examples = await getCollection('examples');
const difficulties = [...new Set(examples.map(e => e.data.difficulty))];
---

<Layout title="Examples - ESPHome Documentation">
  <h1>Examples</h1>
  <p class="subtitle">Complete projects with wiring and configuration</p>

  <div class="filters">
    <label>
      Filter by difficulty:
      <select id="difficultyFilter">
        <option value="">All Levels</option>
        {difficulties.map(diff => (
          <option value={diff}>{diff}</option>
        ))}
      </select>
    </label>
  </div>

  <div class="example-grid" id="exampleGrid">
    {examples.map(example => (
      <div data-difficulty={example.data.difficulty}>
        <ExampleCard example={example} />
      </div>
    ))}
  </div>

  <style>
    .subtitle {
      color: var(--gray);
      font-size: 1.125rem;
      margin-bottom: 2rem;
    }

    .filters {
      margin-bottom: 2rem;
      padding: 1rem;
      background: var(--light-gray);
      border-radius: 0.5rem;
    }

    .filters select {
      padding: 0.5rem;
      border: 1px solid var(--border);
      border-radius: 0.25rem;
      font-size: 1rem;
    }

    .example-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      gap: 1.5rem;
    }

    /* Card styles moved to ExampleCard.astro component */
  </style>

  <script>
    const filter = document.getElementById('difficultyFilter') as HTMLSelectElement;
    const grid = document.getElementById('exampleGrid');
    
    filter?.addEventListener('change', () => {
      const value = filter.value;
      const cards = grid?.querySelectorAll('[data-difficulty]');
      
      cards?.forEach(card => {
        const difficulty = card.getAttribute('data-difficulty');
        if (!value || difficulty === value) {
          (card as HTMLElement).style.display = 'block';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    });
  </script>
</Layout>
