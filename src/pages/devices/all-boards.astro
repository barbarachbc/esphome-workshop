    },
    
    {
      deviceSlug: 'esp32-c3-super-mini',
      shape: 'rect' as const,
      coords: { x: 658, y: 286, width: 98, height: 129 }
    },
    {
      deviceSlug: 'esp32-devkit-v1',
      shape: 'rect' as const,
      coords: { x: 118, y: 500, width: 264, height: 148 }
    },
    {
      deviceSlug: 'esp8266-d1-mini',
      shape: 'rect' as const,
      coords: { x: 705, y: 126, width: 128, height: 168 }
    },
    {
      deviceSlug: 'esp32-c3-wroom-02',
      shape: 'rect' as const,
      coords: { x: 839, y: 303, width: 116, height: 112 }
    },
    
    {
