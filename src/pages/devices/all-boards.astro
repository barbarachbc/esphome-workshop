export const boardComparison = {
  image: comparisonImage.src,
  alt: 'Size comparison of development boards lined up showing their relative sizes',
  imageWidth: 1208,
  imageHeight: 1023,
  hotspots: [
    {
      deviceSlug: 'xmini-c3',
      shape: 'rect' as const,
      coords: { x: 114, y: 107, width: 310, height: 190 }
    },
    {
