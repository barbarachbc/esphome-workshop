---
import { siteConfig } from '../config';

interface Props {
  pageType: 'device' | 'component' | 'project' | 'note';
  pageTitle: string;
  pageSlug: string;
}

const { pageType, pageTitle, pageSlug } = Astro.props;

// Construct the full URL for the current page
const pageUrl = `${siteConfig.siteUrl}/${pageType}s/${pageSlug}`;

// Create issue title
const issueTitle = `[${pageType.charAt(0).toUpperCase() + pageType.slice(1)}] Issue with ${pageTitle}`;

// Create issue body template
const issueBody = `I found an issue on the following page:

**Page:** ${pageTitle}
**URL:** ${pageUrl}
**Type:** ${pageType.charAt(0).toUpperCase() + pageType.slice(1)}

---

**What's wrong?**
<!-- Please describe the issue you found -->


**Suggested correction:**
<!-- If you have a suggestion for fixing this issue, please describe it here -->


<!-- Thank you for helping improve this documentation! -->`;

// Encode URL parameters
const encodedTitle = encodeURIComponent(issueTitle);
const encodedBody = encodeURIComponent(issueBody);

// Construct GitHub issue URL
const githubIssueUrl = `${siteConfig.github.issuesUrl}?title=${encodedTitle}&body=${encodedBody}`;
---

<div class="issue-report-container">
  <a href={githubIssueUrl} target="_blank" rel="noopener noreferrer" class="issue-report-button">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
      <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
    </svg>
    Report Issue
  </a>
</div>

<style>
  .issue-report-container {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .issue-report-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: #f6f8fa;
    color: #24292f;
    border: 1px solid #d0d7de;
    border-radius: 0.375rem;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .issue-report-button:hover {
    background: #f3f4f6;
    border-color: #8c959f;
    color: #0969da;
  }

  .issue-report-button svg {
    flex-shrink: 0;
  }

  /* Dark mode support (optional) */
  @media (prefers-color-scheme: dark) {
    .issue-report-button {
      background: #21262d;
      color: #c9d1d9;
      border-color: #30363d;
    }

    .issue-report-button:hover {
      background: #30363d;
      border-color: #8b949e;
      color: #58a6ff;
    }
  }
</style>
