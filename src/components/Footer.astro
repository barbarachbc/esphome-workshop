---
import { siteConfig } from '../config';

const currentYear = new Date().getFullYear();
const buildDate = new Date().toLocaleDateString('en-US', { 
  year: 'numeric', 
  month: 'long', 
  day: 'numeric' 
});
---

<footer class="mt-16 pt-8 pb-4 px-8 border-t" style="background: var(--bg-footer); border-color: var(--border-primary);">
  <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-[repeat(auto-fit,minmax(200px,1fr))] gap-8 mb-8">
    <div>
      <h3 class="text-base font-semibold m-0 mb-3" style="color: var(--text-heading);">Navigation</h3>
      <ul class="list-none p-0 m-0">
        <li class="mb-2">
          <a href="/" class="no-underline text-sm transition-colors duration-200" style="color: var(--text-secondary);" onmouseover="this.style.color='var(--text-link)';" onmouseout="this.style.color='var(--text-secondary)';">Home</a>
        </li>
        <li class="mb-2">
          <a href="/devices" class="no-underline text-sm transition-colors duration-200" style="color: var(--text-secondary);" onmouseover="this.style.color='var(--text-link)';" onmouseout="this.style.color='var(--text-secondary)';">Devices</a>
        </li>
        <li class="mb-2">
          <a href="/components" class="no-underline text-sm transition-colors duration-200" style="color: var(--text-secondary);" onmouseover="this.style.color='var(--text-link)';" onmouseout="this.style.color='var(--text-secondary)';">Components</a>
        </li>
        <li class="mb-2">
          <a href="/projects" class="no-underline text-sm transition-colors duration-200" style="color: var(--text-secondary);" onmouseover="this.style.color='var(--text-link)';" onmouseout="this.style.color='var(--text-secondary)';">Projects</a>
        </li>
        <li class="mb-2">
          <a href="/notes" class="no-underline text-sm transition-colors duration-200" style="color: var(--text-secondary);" onmouseover="this.style.color='var(--text-link)';" onmouseout="this.style.color='var(--text-secondary)';">Notes</a>
        </li>
        <li class="mb-2">
          <a href="/about" class="no-underline text-sm transition-colors duration-200" style="color: var(--text-secondary);" onmouseover="this.style.color='var(--text-link)';" onmouseout="this.style.color='var(--text-secondary)';">About</a>
        </li>
      </ul>
    </div>
    
    <div>
      <h3 class="text-base font-semibold m-0 mb-3" style="color: var(--text-heading);">Community</h3>
      <ul class="list-none p-0 m-0">
        <li class="mb-2">
          <a href={siteConfig.github.issuesUrl} target="_blank" rel="noopener noreferrer"
             class="no-underline text-sm transition-colors duration-200" style="color: var(--text-secondary);" onmouseover="this.style.color='var(--text-link)';" onmouseout="this.style.color='var(--text-secondary)';">
            Report an Issue
          </a>
        </li>
        <li class="mb-2">
          <a href={`https://github.com/${siteConfig.github.repo}`} target="_blank" rel="noopener noreferrer"
             class="no-underline text-sm transition-colors duration-200" style="color: var(--text-secondary);" onmouseover="this.style.color='var(--text-link)';" onmouseout="this.style.color='var(--text-secondary)';">
            View on GitHub
          </a>
        </li>
      </ul>
    </div>
    
    <div>
      <h3 class="text-base font-semibold m-0 mb-3" style="color: var(--text-heading);">Info</h3>
      <p class="text-sm m-0 mb-2" style="color: var(--text-secondary);">
        A personal workshop for tracking ESPHome devices and projects.
      </p>
      <p class="text-xs m-0 italic" style="color: var(--text-secondary);">
        Last built: {buildDate}
      </p>
    </div>
  </div>
  
  <div class="max-w-7xl mx-auto pt-6 border-t text-center" style="border-color: var(--border-primary);">
    <p class="text-sm m-0" style="color: var(--text-secondary);">
      &copy; {currentYear} My ESPHome Workshop. Built with 
      <a href="https://astro.build" target="_blank" rel="noopener noreferrer"
         class="no-underline hover:underline" style="color: var(--text-link);">
        Astro
      </a>.
    </p>
    <p>This work is licensed under <a href="https://creativecommons.org/licenses/by-sa/4.0/">CC BY-SA 4.0</a><img src="https://mirrors.creativecommons.org/presskit/icons/cc.svg" alt="" style="max-width: 1em;max-height:1em;margin-left: .2em;display:inline;"><img src="https://mirrors.creativecommons.org/presskit/icons/by.svg" alt="" style="max-width: 1em;max-height:1em;margin-left: .2em;display:inline;"><img src="https://mirrors.creativecommons.org/presskit/icons/sa.svg" alt="" style="max-width: 1em;max-height:1em;margin-left: .2em;display:inline;"></p>
  </div>
</footer>
