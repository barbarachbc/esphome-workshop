---
interface Props {
  note: {
    slug: string;
    data: {
      title: string;
      description: string;
      category: string;
      difficulty?: string;
      tags?: string[];
    };
  };
}

const { note } = Astro.props;
---
<div class="block rounded-lg overflow-hidden transition-all duration-200 hover:shadow-lg hover:-translate-y-0.5" style="background: var(--bg-card); border: 1px solid var(--border-card);">
<a href={`/notes/${note.slug}`} class="no-underline text-inherit">
  <div class="p-6">
    <div class="flex justify-between items-center mb-2">
      <span class="category-badge category-badge-purple">
        {note.data.category}
      </span>
      {note.data.difficulty && (
        <span class={`difficulty-badge difficulty-badge-${note.data.difficulty}`}>
          {note.data.difficulty}
        </span>
      )}
    </div>
    <h3 class="my-2 text-xl" style="color: var(--text-heading);">{note.data.title}</h3>
    <p class="my-3 leading-relaxed" style="color: var(--text-secondary);">{note.data.description}</p>
    {note.data.tags && note.data.tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mt-4">
        {note.data.tags.map(tag => (
          <span class="tag-badge">
            {tag}
          </span>
        ))}
      </div>
    )}
  </div>
</a>
</div>