---
interface Props {
  note: {
    slug: string;
    data: {
      title: string;
      description: string;
      category: string;
      difficulty?: string;
      tags?: string[];
    };
  };
}

const { note } = Astro.props;
---
<div class="block rounded-lg overflow-hidden transition-all duration-200 hover:shadow-lg hover:-translate-y-0.5" style="background: var(--bg-card); border: 1px solid var(--border-card);">
<a href={`/notes/${note.slug}`} class="no-underline text-inherit">
  <div class="p-6">
    <div class="flex justify-between items-center mb-2">
      <span class="inline-block px-3 py-1 rounded text-sm font-medium" style="background: var(--accent-purple-light); color: var(--accent-purple);">
        {note.data.category}
      </span>
      {note.data.difficulty && (
        <span class="inline-block px-3 py-1 rounded text-sm font-medium capitalize" 
              style={`background: ${
                note.data.difficulty === 'beginner' ? 'var(--accent-emerald-light)' :
                note.data.difficulty === 'intermediate' ? 'var(--accent-amber-light)' :
                'var(--accent-red-light)'
              }; color: ${
                note.data.difficulty === 'beginner' ? 'var(--accent-emerald)' :
                note.data.difficulty === 'intermediate' ? 'var(--accent-amber)' :
                'var(--accent-red)'
              };`}>
          {note.data.difficulty}
        </span>
      )}
    </div>
    <h3 class="my-2 text-xl" style="color: var(--text-heading);">{note.data.title}</h3>
    <p class="my-3 leading-relaxed" style="color: var(--text-secondary);">{note.data.description}</p>
    {note.data.tags && note.data.tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mt-4">
        {note.data.tags.map(tag => (
          <span class="inline-block px-2 py-1 rounded text-xs font-medium" style="background: var(--bg-secondary); color: var(--text-primary);">
            {tag}
          </span>
        ))}
      </div>
    )}
  </div>
</a>
</div>