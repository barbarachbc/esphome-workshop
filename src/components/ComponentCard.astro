---
interface Props {
  component: {
    slug: string;
    data: {
      title: string;
      description: string;
      category: string;
      esphomeComponent: string;
    };
  };
}

const { component } = Astro.props;
---

<a href={`/components/${component.slug}`} class="block rounded-lg overflow-hidden transition-all duration-200 no-underline text-inherit hover:shadow-lg hover:-translate-y-0.5" style="background: var(--bg-card); border: 1px solid var(--border-card);">
  <div class="p-6">
    <span class="category-badge category-badge-emerald mb-2">{component.data.category}</span>
    <h3 class="my-2 text-xl" style="color: var(--text-heading);">{component.data.title}</h3>
    <code class="block p-2 rounded text-sm my-2 font-mono" style="background: var(--bg-code-inline); color: var(--text-primary);">{component.data.esphomeComponent}</code>
    <p class="mt-3 mb-0 leading-normal" style="color: var(--text-secondary);">{component.data.description}</p>
  </div>
</a>
